@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = " REPA navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="REPA1 text-white">
            @Html.ActionLink("Hola! " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>

        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesion</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">   
    <a class="nav-link" href="@Url.Action("Register","Account")">Registrarse</a>
    <a class="nav-link" href="@Url.Action("Login","Account")">Iniciar Sesion</a>    
</ul>
}
