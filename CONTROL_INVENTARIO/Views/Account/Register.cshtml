@model CONTROL_INVENTARIO.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrase";
}
    <br /><br />
    <div class="masthead">

        <div class="masthead-content space">

            <div class="container">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Crear una nueva cuenta.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="col-md-4">Correo Electronico</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4">Contrasena</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4">Confirmar Contrasena</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class=" calis col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-outline-dark" value="Registrar" />
                            <a href="@Url.Action("Index","Home")" class="btn btn-danger">Volver a Inicio</a>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
